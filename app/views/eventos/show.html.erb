<div class="row">
        <div class="col s12 m12">
          <div class="card big">
            <div class="card-image">
              <div class="carousel carousel-slider", style="height:300px">
                <a class="carousel-item"><%= image_tag"#{https://github.com/jaimescose/Even/tree/master/app/assets/images/}#{@evento.id}#{1}" %></a>
                <a class="carousel-item"><%= image_tag"#{@evento.id}#{2}" %></a>
                <a class="carousel-item"><%= image_tag"#{@evento.id}#{3}" %></a>
              </div>
              <span class="card-title"><h2><%= @evento.name%></h2></span>
            </div>
            <div class="card-content">
              <ul class="collection">
                <!--
                Este es el coleccion
                -->
                <li class="collection-item avatar">
                  <%= image_tag "#{"org"}#{@evento.usuario.id}", class:"circle" %>
                  <span class="title">Organizador: <%= @evento.usuario.name %></span>
                </li>
                <li class="collection-item avatar">
                  <i class="material-icons circle blue">location_on</i>
                  <span class="title">Dirección:  <br><%= @evento.address %></span>

                    <div style='width: 800px;'>
                      <div id="map" style='width: 800px; height: 400px;'></div>
                    </div>
                </li>
                <li class="collection-item avatar">
                  <i class="material-icons circle red">info</i>
                  <span class="title">Descripción: </span>
                  <p><%= @evento.desc %>
                  </p><br>
                  <span class="title">Categorías: </span><br>
                  <i class="material-icons tooltipped" data-position="bottom" data-delay="50" data-tooltip="Música">headset </i>
                  <i class="material-icons tooltipped" data-position="bottom" data-delay="50" data-tooltip="Arte">color_lens </i>
                  <i class="material-icons tooltipped" data-position="bottom" data-delay="50" data-tooltip="Deporte">directions_run </i>
                </li>
                <li class="collection-item avatar">
                  <i class="material-icons circle yellow">stars</i>
                  <span class="title">Puntuación</span>
                  <div align="center"><i class="material-icons">grade</i>
                    <i class="material-icons">grade</i>
                    <i class="material-icons">grade</i>
                    <i class="material-icons">grade</i>
                  </div>
                  <p align="center">4/5</p>
                </li>
              </ul>
            </div>
            <div class="card-action">
              <a class="waves-effect waves-light btn">Asistir</a>
            </div>
          </div>
        </div>
      </div>
<script src="//maps.google.com/maps/api/js?key=AIzaSyAM1FOUpBoVbRjCsBbqIQFXfaoRzl7wD8o"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
$(document).ready(function(){
  $('.carousel.carousel-slider').carousel({full_width: true});
  $('.materialboxed').materialbox();
  $('.tooltipped').tooltip({delay: 50});
});
</script>
