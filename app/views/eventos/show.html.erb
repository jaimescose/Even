<div class="row">
        <div class="col s12 m12">
          <div class="card big">
            <div class="card-image">
              <img src="https://images.unsplash.com/photo-1470259628879-b26711784142?dpr=1&auto=format&fit=crop&w=767&h=511&q=80&cs=tinysrgb&crop=">
            <span class="card-title"><h2><%= @evento.name%></h2></span>
            </div>
            <div class="card-content">
              <ul class="collection">
                <!--
                Este es el coleccion
                -->
                <li class="collection-item avatar">
                  <img src="https://scontent-atl3-1.xx.fbcdn.net/v/t1.0-9/13006526_589627404529073_4153293944546264358_n.jpg?oh=0f626a2daeee87b5b4e85d9811583251&oe=58CAF1C1" alt="" class="circle">
                  <span class="title">Organizador: <%= @evento.usuario.name %></span>
                  <a href="#!" class="secondary-content"><i class="material-icons">search</i></a>
                </li>
                <li class="collection-item avatar">
                  <i class="material-icons circle blue">location_on</i>
                  <span class="title">Dirección:  <br><%= @evento.address %></span>

                    <div style='width: 800px;'>
                      <div id="map" style='width: 800px; height: 400px;'></div>
                    </div>
                </li>
                <li class="collection-item avatar">
                  <i class="material-icons circle red">info</i>
                  <span class="title">Descripción: </span>
                  <p><%= @evento.desc %>
                  </p>
                </li>
                <li class="collection-item avatar">
                  <i class="material-icons circle yellow">stars</i>
                  <span class="title">Puntuación</span>
                  <div align="center"><i class="material-icons">grade</i>
                    <i class="material-icons">grade</i>
                    <i class="material-icons">grade</i>
                    <i class="material-icons">grade</i>
                  </div>
                  <p align="center">4/5</p>
                </li>
              </ul>
            </div>
            <div class="card-action">
              <a class="waves-effect waves-light btn">Asistir</a>
            </div>
          </div>
        </div>
      </div>
<script src="//maps.google.com/maps/api/js?key=AIzaSyAM1FOUpBoVbRjCsBbqIQFXfaoRzl7wD8o"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>